@model Notenverwaltung.Models.Benutzer

@{
    ViewData["Title"] = "Registrierung";
}

<h1>Registrierung</h1>

<h4>Benutzer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BenutzerErstellen" asp-controller="Benutzer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="benutzerName" class="control-label"></label>
                <input asp-for="benutzerName" class="form-control" />
                <span asp-validation-for="benutzerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="benutzerPasswort" class="control-label"></label>
                <input type="password" asp-for="benutzerPasswort" class="form-control" />
                <span asp-validation-for="benutzerPasswort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrieren" class="btn btn-primary" />
            </div>
            <span class="alert-danger">@TempData["BenutzerVergebenMessage"]</span>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
