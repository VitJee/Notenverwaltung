@model Notenverwaltung.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<h1>Löschen</h1>

<h3>Bist du dir sicher dass, du die Note löschen willst?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.gewichtung)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.gewichtung)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück</a>
    </form>
</div>
